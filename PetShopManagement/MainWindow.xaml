<Window x:Class="PetShopManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShopManagement"
        mc:Ignorable="d"
        Title="Управление магазином животных" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Окна">
                <MenuItem Header="Виды животных" Click="AnimalTypesMenu_Click"/>
                <MenuItem Header="Породы животных" Click="BreedsMenu_Click"/>
            </MenuItem>
        </Menu>

        <TextBlock Grid.Row="1" Text="Меню" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
    </Grid>
</Window>